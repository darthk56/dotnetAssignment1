@model IEnumerable<Category>

<div class="bg-primary m-1 p-1 text-white"><h4>Categories</h4></div>
<ul>
    @foreach (Category category in Model)
    {
        <li class="list-group-item">
        <a asp-controller="Product" asp-action="ProductDetail" asp-route-id="@category.CategoryId">@category.CategoryName</a>
        </li>
    }
</ul>