@model DiscountViewModel

@if (Model.Discounts.Count() == 0)
{
  <p>Sorry no discounts right now</p>
}
else{
        <div class="position-fixed bottom-0 right-0 p-3" style="z-index: 5; right: 0; bottom: 0;">
        <div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true" data-delay="2000">
          <div class="toast-header">
            <strong class="mr-auto" id="ToastHeader">Product Name</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="toast-body" id="ToastBody">
            Discount Code: <strong id="code">CODE</strong>
          </div>
        </div>
    </div>
    <br />
    <ul class="list-group">
    @foreach (Discount d in Model.Discounts)
    {
        <li class="list-group-item"><div class="col discounts px-2 py-4">
            <h4>@d.Title</h4>
            <div class="mb-4">
                @d.Description
            </div>
            <i>Discount expires: @d.EndTime.ToString("MM/dd/yyyy")</i><br />
            <a href="#" class="code" data-code="@d.Code" data-product="@d.Title"><i class="far fa-hand-point-right"></i> Discount Code</a>
        </div></li>
        
    }
    </ul>
}